<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="468.0" prefWidth="483.0" spacing="20.0" style="-fx-background-color: #1D1D2B;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.futebolfx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="nome" onAction="#onNameChange" prefHeight="26.0" prefWidth="348.0" promptText="INSIRA O NOME DO JOGADOR" />
   <TextField fx:id="posicao" layoutX="30.0" layoutY="188.0" onAction="#onPosicaoChange" prefHeight="26.0" prefWidth="348.0" promptText="INSIRA A POSIÇÃO DO JOGADOR" />
   <TextField fx:id="dataDeNacimento" layoutX="30.0" layoutY="165.0" onAction="#onDataDeNacimentoChange" prefHeight="26.0" prefWidth="348.0" promptText="INSIRA A DATA DE NASCIMENTO DO JOGADOR" />
   <TextField fx:id="nacionalidade" layoutX="30.0" layoutY="188.0" onAction="#onNacionalidadeChange" prefHeight="26.0" prefWidth="348.0" promptText="INSIRA A NACIONALIDADE DO JOGADOR" />
   <TextField fx:id="altura" layoutX="30.0" layoutY="257.0" onAction="#onAlturaChange" prefHeight="26.0" prefWidth="348.0" promptText="INSIRA A ALTURA DO JOGADOR" />
   <TextField fx:id="peso" layoutX="30.0" layoutY="280.0" onAction="#onPesoChange" prefHeight="26.0" prefWidth="348.0" promptText="INSIRA O PESO DO JOGADOR" />

    <Label fx:id="welcomeText" />
    <Button onAction="#onHelloButtonClick" prefHeight="30.0" prefWidth="286.0" style="-fx-background-color: #0277FA;" text="ENVIAR" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="Fira Code Retina" size="14.0" />
      </font></Button>
</VBox>
